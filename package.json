{
  "name": "hapi-boilerplate",
  "version": "1.0.0",
  "description": "HapiJS boilerplate written in TypeScript",
  "main": "src/main.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node dist/main",
    "start:dev": "ts-node src/main.ts",
    "start:prod": "node dist/main",
    "pretest": "tsc",
    "test": "lab -I require -a @hapi/code"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriel-pinheiro/hapi-boilerplate.git"
