  "bugs": {
    "url": "https://github.com/gabriel-pinheiro/hapi-boilerplate/issues"
  },
  "homepage": "https://github.com/gabriel-pinheiro/hapi-boilerplate#readme",
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "@mocko/logger": "^1.1.3",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.2",
    "@hapi/lab": "^24.1.0",
    "@types/dotenv": "^8.2.0",
    "@types/hapi": "^18.0.3",
    "@types/hapi__hapi": "^19.0.3",
